{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "outDir": "lib",
    "declaration": true,
    "moduleResolution": "node",
    "strict": true,
    "jsx": "preserve",
    "sourceMap": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "lib": ["esnext", "dom"]
  },
  "include": ["src/**/*.ts", "src/**/*.d.ts"]
}
